<%= form_with(model: @projects) do |f|%> 
    <div>
        <%= f.label :title, 'Título:', class:"col-sm-2 col-form-label mt-3" %>
        <%= f.text_field :title, class:"form-control" %>
    </div>

    <div>
        <%= f.label :description, 'Descrição:', class:"col-sm-2 col-form-label mt-3"%>
        <%= f.text_field :description, class:"form-control" %>
    </div>

    <div>
        <%= f.label :skills, 'Habilidades:', class:"col-sm-2 col-form-label mt-3"%>
        <%= f.text_field :skills, class:"form-control" %>
    </div>

    <div>
        <%= f.label :price_per_hour, 'Preço por hora:', class:"col-sm-2 col-form-label mt-3"%>
        <%= f.number_field :price_per_hour, class:"form-control" %>
    </div>

    <div>
        <%= f.label :deadline, 'Data limite:', class:"col-sm-2 col-form-label mt-3" %>
        <%= f.date_field :deadline, class:"form-control" %>
    </div>

     <div>
        <%= f.label :remote, 'Remoto', class:"mt-3 mb-3"%>
        <%= f.check_box :remote%>
    </div>

    <%= f.submit 'Adicionar', class:"btn btn-primary" %>

<% end %>

